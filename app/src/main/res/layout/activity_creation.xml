<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg1"
    tools:context="rsi.nameless.CreationActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:inputType="textPersonName"
        android:hint="Enter your name"
        android:id="@+id/choosePlayerName"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/choosePlayerName"
        android:layout_above="@+id/startGameButton">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="HP"
            android:id="@+id/HP"
            android:layout_row="0"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Strength"
            android:id="@+id/Strength"
            android:layout_row="1"
            android:layout_column="0" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:id="@+id/strMinus"
            android:layout_row="1"
            android:layout_column="1"
            android:onClick="strMinus"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="0"
            android:id="@+id/strPoints"
            android:layout_row="1"
            android:layout_column="2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:id="@+id/strPlus"
            android:layout_row="1"
            android:layout_column="3"
            android:onClick="strPlus"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:src="@drawable/questionbutton"
            android:background="@null"
            android:id="@+id/strQuestion"
            android:layout_row="1"
            android:layout_column="4"
            android:onClick="strQuestion"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Defense"
            android:id="@+id/Defense"
            android:layout_row="2"
            android:layout_column="0" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:id="@+id/defMinus"
            android:layout_row="2"
            android:layout_column="1"
            android:onClick="defMinus"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="0"
            android:id="@+id/defPoints"
            android:layout_row="2"
            android:layout_column="2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:id="@+id/defPlus"
            android:layout_row="2"
            android:layout_column="3"
            android:onClick="defPlus"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:src="@drawable/questionbutton"
            android:background="@null"
            android:id="@+id/defQuestion"
            android:layout_row="2"
            android:layout_column="4"
            android:onClick="defQuestion"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Skill"
            android:id="@+id/Skill"
            android:layout_row="3"
            android:layout_column="0" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:id="@+id/sklMinus"
            android:layout_row="3"
            android:layout_column="1"
            android:onClick="sklMinus"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="0"
            android:id="@+id/sklPoints"
            android:layout_row="3"
            android:layout_column="2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:id="@+id/sklPlus"
            android:layout_row="3"
            android:layout_column="3"
            android:onClick="sklPlus"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:src="@drawable/questionbutton"
            android:background="@null"
            android:id="@+id/sklQuestion"
            android:layout_row="3"
            android:layout_column="4"
            android:onClick="sklQuestion"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Speed"
            android:id="@+id/Speed"
            android:layout_row="4"
            android:layout_column="0" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:id="@+id/hpMinus"
            android:layout_row="0"
            android:layout_column="1"
            android:onClick="hpMinus"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:id="@+id/spdMinus"
            android:layout_row="4"
            android:layout_column="1"
            android:onClick="spdMinus"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="0"
            android:layout_row="0"
            android:layout_column="2"
            android:id="@+id/hpPoints" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="0"
            android:id="@+id/spdPoints"
            android:layout_row="4"
            android:layout_column="2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:id="@+id/hpPlus"
            android:layout_row="0"
            android:layout_column="3"
            android:onClick="hpPlus"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:id="@+id/spdPlus"
            android:layout_row="4"
            android:layout_column="3"
            android:onClick="spdPlus"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:src="@drawable/questionbutton"
            android:background="@null"
            android:id="@+id/speedQueston"
            android:layout_row="4"
            android:layout_column="4"
            android:onClick="spdQuestion"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Points remaining:"
            android:id="@+id/RemaingingText"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_columnSpan="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="15"
            android:id="@+id/Points"
            android:layout_row="5"
            android:layout_column="2" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:src="@drawable/questionbutton"
            android:background="@null"
            android:id="@+id/hpQuestion"
            android:layout_row="0"
            android:layout_column="4"
            android:onClick="hpQuestion"/>

    </GridLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="Start Game"
        android:id="@+id/startGameButton"
        android:onClick="startGame"/>

</RelativeLayout>
